extends ../app_layout.pug

include ./nav/nav.pug

block main
    main
        .purple-bg.big-square
            img#profile-image.circle.z-depth-1(data-bind='attr:{src:image}')
        .row.center-align
            .col.s12
                h4.blue-grey-text(data-bind='text:name')
        .row.blue-grey-text
            .col.s4.m5.right-align
                div.icon-container: i.material-icons.deep-purple-text email
            .col.s8.m7.left-align
                div: small(data-bind='text:email')
        .row.blue-grey-text
            .col.s10.offset-s1.m8.offset-m2.left-align
                h5: small Personal Bio
            .col.s10.offset-s1.m8.offset-m2.center-align
                textarea#personal-bio.materialize-textarea(placeholder='Tell the world who you are')
        #my-events.row.blue-grey-text
            .col.s10.offset-s1.m8.offset-m2.left-align
                h5: small My Events
            .col.s10.offset-s1.m8.offset-m2.left-align
                p.blue-grey-text.text-lighten-2: small You have no events created thus far                 


block scripts
    script(src='bower_components/jquery/dist/jquery.min.js')
    script(src="bower_components/localforage/dist/localforage.min.js")
    script(src='bower_components/materialize/dist/js/materialize.min.js')
    script(src='bower_components/knockout/dist/knockout.js')
    script(src='js/navinit.js')
    script(src='js/getprofile.js')
